    "@dxfrontier/cds-ts-repository": "^0.3.6",
    "@sap/cds": "^7.5.3",
    "express": "^4.18.2"
  },
 "devDependencies": {
  "@cap-js/cds-typer": "^0.15.0",
  "@cap-js/sqlite": "^1.4.0",
